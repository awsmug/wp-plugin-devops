#!/bin/sh

SCRIPT_PATH=$(dirname $0)

if [ "$1" = "all" ]; then
    $SCRIPT_PATH/docker-webserver/phpunit-tests.sh
    $SCRIPT_PATH/docker-webserver/behat-tests.sh
    echo "Starting all tests"

elif [ "$1" = "phpunit" ]; then
    $SCRIPT_PATH/docker-webserver/phpunit-tests.sh
    echo "Starting PHP Unit Tests"

elif [ "$1" = "behat" ]; then
     $SCRIPT_PATH/docker-webserver/behat-tests.sh
    echo "Starting Behat Tests"

else
    echo "Usage: $(basename $0) <all|behat|phpunit>"
    exit 1
fi